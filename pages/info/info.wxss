/* pages/info/info.wxss */
.header{
  height: 450rpx;
  background-color: #BCE7FD;
}
.header .head-portrait{
  position: absolute;
  width: 180rpx;
  background-color: #eee;
  height: 180rpx;
  border-radius: 50%;
  left: 50%;
  transform: translate(-50%,50%);
}
.content{
  background-color: rgba(239, 239, 239,.5);
  height: 700rpx;
  position:static;
}
.content .clauses{
  background-color: #ffffff;
  border-top: 1rpx solid rgba(0,0,0,.1);
  height: 300rpx;
  width: 100%;
  margin-top: 30rpx;
  position: absolute;
}
.navtext{
  height: 100rpx;
  margin: 0 30rpx;
  border-bottom: 1rpx solid rgba(0,0,0,.1);
}
.navtext text{
  line-height: 100rpx;
}
.navtext image{
  width: 70rpx;
  height: 70rpx;
  float: right;
  margin-top: 15rpx;
}