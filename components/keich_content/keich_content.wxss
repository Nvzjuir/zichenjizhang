/* components/keich_hader_left/keich_hader_left.wxss */
.live{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.live_item{
  flex: 1;
  margin: 30rpx 50rpx;
  width: 170rpx;
  height: 170rpx;
  text-align: center;
}
.live_item image{
  width: 100rpx;
  height: 100rpx;
  padding: 20rpx 20rpx;
  background-color: #BCE7FD;
  border-radius: 100%;
}
.live_item text{
  font-size: 25rpx;
}
.commodity_attr_box {
  height: 500rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #ffffff;
}
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  display: flex;
}
.popup_input{
  width: 100%;
  height: 102rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, .3);
  border-radius: 30rpx;
  margin: 0 10rpx;
  flex: 1;
}
.remark{
  display: inline-block;
  height: 100rpx;
  flex: auto;
}
.num{
  display: inline-block;
  height: 100rpx;
  flex: auto;
  text-align: right;
}
.content{
  margin-top: 5rpx;
  width: 100%;
  display: flex;
  flex: auto;
}
.figure_item{
  width: 33%;
  height: 100rpx; 
  flex: auto;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, .3);
  border-radius: 30rpx;
}
.figure{
  height: 300rpx;
  width: 80%;
  display: flex;
  flex-wrap: wrap;
  margin-right: 10rpx;
}
.bottom{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex: auto;
}
.bottom_item{
  width: 100%;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  height: 80rpx; 
  border-bottom: 1rpx solid rgba(0, 0, 0, .3);
  border-radius: 30rpx;
  position: relative;
}
.bottom_item image{
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  top: 50%;
  transform: translate(-50%,-50%)
}
.content_right{
  height: 100%;
  width: 25%;
}
.right_item{
  height: 100rpx; 
  width: 100%;
  flex: auto;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, .3);
  border-radius: 30rpx;
}
.hover{
  color: rgba(255, 0, 0, 0.2);
}
.ui-datepicker-calendar {
display: none;
}